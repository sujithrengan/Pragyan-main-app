<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pragyan_dark_grey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.delta.pragyan16.SplashScreen">

    <ImageView
        android:id="@+id/logo_app_0"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_chakra_ext" />

    <ImageView
        android:id="@+id/logo_app_1"
        android:layout_width="171.68dp"
        android:layout_height="171.68dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_chakra_ext" />

    <ImageView
        android:id="@+id/logo_app_2"
        android:layout_width="98.25dp"
        android:layout_height="98.25dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_chakra_ext" />

    <ImageView
        android:id="@+id/logo_app_3"
        android:layout_width="56.22dp"
        android:layout_height="56.22dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_chakra_ext" />

    <ImageView
        android:id="@+id/logo_app_4"
        android:layout_width="32.17dp"
        android:layout_height="32.17dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_chakra_ext" />

    <ImageView
        android:id="@+id/logo_app_5"
        android:layout_width="18.41dp"
        android:layout_height="18.41dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_chakra" />

    <ImageView
        android:id="@+id/pragyan_logo_large"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_app"
        android:visibility="invisible" />

</RelativeLayout>
